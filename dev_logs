installazione di go
wget https://go.dev/dl/go1.24.5.linux-amd64.tar.gz 
rm -rf /usr/local/go && tar -C /usr/local -xzf go1.24.5.linux-amd64.tar.gz
export PATH=$PATH:/usr/local/go/bin
go version


